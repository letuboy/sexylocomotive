%li{ :id => "item-#{photo_gallery.id}" }
  %em
  %strong= link_to truncate(photo_gallery.title, :length => 80), admin_photo_gallery_url(photo_gallery)

  .more
    %span!= t('.updated_at')
    = l photo_gallery.updated_at, :format => :short

    - if can?(:manage, photo_gallery)
      = link_to image_tag('admin/list/icons/trash.png'), admin_photo_gallery_url(photo_gallery), :class => 'remove', :confirm => t('admin.messages.confirm'), :method => :delete


